- var title = "FAQ по СССР";
- var description = "Данный список содержит короткие «Вопросы и ответы» на тему социализма и СССР. Ответы даны в свободной форме с ссылками на Википедию (там, где это возможно).";

doctype html
<html>

  include components/head.pug

  +head(false, 'https://firstcountryin.space/images/orders/Order_of_Red_Banner_of_Labor.png')

  <body>
    <div class="tl_page_wrap">
      <div class="tl_page">
        <main class="tl_article">
          <header class="tl_article_header">
            <h1 dir="auto">#{title}&nbsp;
              img(src="../images/orders/Order_of_Red_Banner_of_Labor.webp")
            </h1>
            <address dir="auto">
              <a rel="author">Октябрь 25, 2023</a>
              <time datetime="2023-03-01T00:00:00.000Z"></time>
            </address>
          </header>
          <article id="_tl_editor" class="tl_article_content">
            <div class="tl_article_buttons">
              <a href="/" class="button">
                span Инновации в СССР
                img(src="../images/orders/kachestvo.webp")
              </a>
              <a href="../myths/" class="button">
                span Мифы об СССР
                img(src="../images/orders/Order_of_Lenin.webp")
              </a>
              <a href="./faq/" class="button disabled">
                span FAQ по СССР
                img(src="../images/orders/Order_of_Red_Banner_of_Labor.webp")
              </a>
            </div>
            p=description
            <figure>
              img(src="../images/univermag.webp")
              <figcaption>Универмаг самообслуживания «Заневский». Открыт в Ленинграде в 1966 году</figcaption>
            </figure>

            hr
            br

            include faq/queue.pug
            include faq/parasitism.pug
            include faq/more.pug
          </article>
        </main>
      </div>

      include components/footer.pug
      +footer("../images/orders/Order_of_Red_Banner_of_Labor.webp")
    </div>

    script(async, src="https://www.googletagmanager.com/gtag/js?id=G-2B0JZYV657")
    script(src="../js/footer.js")
  </body>

</html>
